<div id="main-container-associations">


    <h1>Associations</h1>

   

    <div id="container-all-assos">
        {{#each assos}}
            <div id="container-one-asso">
                
                <div class="image-associations">
                    <img src="{{this.image}}" alt="picture" height="150px">
                </div>
                <div id="info-container">
                    <span id="name-info">{{this.name}}</span> 
                    <br><br>
                    <span>adresse: </span> {{this.address}}
                    <br>
                    <span>t√©l. </span> {{this.tel}}
                    <br>
                    <span>e-mail: </span>  {{this.email}}
                    <br>
                    <span>lien: </span> <a href="{{this.link}}" class="link">{{this.link}}</a>
                    <br>
                    {{this.description}}
                </div>
            
            </div> 
        {{/each}}
    </div>
</div>