<h1 class="flex-choice">Inscrire votre association</h1>

    <form method="POST" class="ui form flex-sign" action="/addAsso" id="form-user" enctype="multipart/form-data">

        <div class="field field-signup">
                <label for="name">Nom</label>
                <input type="text" id="name" name="name">
        </div>

        <div class="field field-signup">
                <label for="address">Adresse</label>
                <input type="text" id="address" name="address">
        </div>

        <div class="field field-signup">
                <label for="tel">Téléphone</label>
                <input type="text" id="tel" name="tel">
        </div>

        <div class="field field-signup">
                <label for="description">Description</label>
                <textarea type="text" id="description" name="description">
                </textarea>
        </div>

        <div class="field field-signup">
                <label for="link">Lien</label>
                <input type="text" id="link" name="link">
        </div>

        <div class="field field-signup">
                <label for="mail">E-mail</label>
                <input type="text" id="mail" name="email">
        </div>
        <div class="field field-signup">
                <label for="password" class="password-label">Password</label>
                <input id="user-password" type="password" placeholder="••••••" name="password" required value="1234">
        </div>
        <div class="field field-signup">
                <label for="image">Image</label>
                <input type="file" id="image" name="image">
        </div>

        <button class="ui secondary button">
        S'inscrire
        </button>
    </form>

{{> flash_message}}

<div class="flex-choice">
    <p>Vous possedez déjà un compte ?
        <a href="/signinAsso" class="button-link-form">Vous connecter</a>
    </p>
</div>