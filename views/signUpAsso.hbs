<h1 class="flex-choice">Inscrire votre association</h1>

<section id="sign-up-asso">

    <form method="POST" action="/addAsso" id="form-user">

<div class="ui form flex-sign">
<div class="field">
        <label for="name">Nom</label>
        <input type="text" id="name" name="name">
</div>

<div class="field">
        <label for="address">Adresse</label>
        <input type="text" id="address" name="address">
</div>

<div class="field">
        <label for="tel">Téléphone</label>
        <input type="text" id="tel" name="tel">
</div>

<div class="field">
        <label for="description">Description</label>
        <input type="text" id="description" name="description">
</div>

<div class="field">
        <label for="link">Lien</label>
        <input type="text" id="link" name="link">
</div>

<div class="field">
        <label for="mail">E-mail</label>
        <input type="text" id="mail" name="email">
</div>
<div class="field">
        <label for="password" class="password-label">Password</label>
        <input id="user-password" type="password" placeholder="••••••" name="password" required value="1234">
</div>
<div class="field">
        <label for="image">Image</label>
        <input type="file" id="image" name="image">
</div>

       <button class="ui secondary button">
  S'inscrire
</button>
</div>
    </form>
    {{> flash_message}}
<div class="flex-choice">
    <p>Vous possedez déjà un compte ?

        <a href="/signinAsso" class="button-link-form">Vous connecter</a>
    </p>
</div>